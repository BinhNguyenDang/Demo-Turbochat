<div id="chatroom_container" class="row bg-dark text-light">
  <!-- Side Panel -->
  <div id="side_panel" class="col-md-4 col-sm-4">
    <!-- Current User Information -->
    <h5> <%= current_user.email %> </h5>
    
    <!-- Users Section -->
    <h4> Users </h4>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>
    
    <!-- Rooms Section -->
    <h4> Rooms </h4>
    <%= render 'layouts/new_room_form' %>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms">
      <%= render @rooms %>
    </div>
  </div>
  
  <!-- Main Chatroom Container -->
  <div id="room_container" class="col-md-8 col-sm-8 bg-dark text-light">
    <% if @single_room %>
      <!-- Single Room -->
      <div id="single_room">
        <!-- Display Room Name or User's Email -->
        <h4 class="text-center"> <%= @user&.email || @single_room.name %> </h4>
        
        <!-- Turbo Stream for Single Room -->
        <%= turbo_stream_from @single_room %>
        
        <!-- Messages Section -->
        <div id="messages">
          <%= render @messages %>
        </div>
        
        <!-- New Message Form -->
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>
