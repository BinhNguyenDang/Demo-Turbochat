
    <div class="cont-<%=message.user.id%>">
      <div class="message-box msg-<%= message.user.id %>">
        <div class="d-flex align-items-center">
          <%= image_tag(message.user.chat_avatar, class:'chat_pfp') %>
          <div>
            <h6 class="name msg-role-<%= message.user.role%>"> 
            <%= link_to message.user.email, message.user, class:"msg-role-#{message.user.role}" %>
            </h6>
            <p class="time"><%= time_ago_in_words(message.created_at) %> ago</p>
          </div>
        </div>
        <div>
          <%= message.body %><br>
          <% if message.created_at != message.updated_at %>
            (edited)
          <% end%>
        </div>
        <%= render "messages/attachments", message: message %>
        <!-- Delete Icon/Button for nested resource -->
        <%= render "messages/delete", message: message%>
      </div>
    </div>
